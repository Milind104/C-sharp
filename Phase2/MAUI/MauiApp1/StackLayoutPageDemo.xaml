<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.StackLayoutPageDemo"
             Title="StackLayoutPageDemo">
    <StackLayout Spacing="10">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Start" BackgroundColor="Aqua" />
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="End" BackgroundColor="BlueViolet" />
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="FillAndExpand" BackgroundColor="Brown"/>   
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="FillAndExpand" 
            HorizontalOptions="Center" BackgroundColor="Chartreuse" />


    </StackLayout>
</ContentPage>