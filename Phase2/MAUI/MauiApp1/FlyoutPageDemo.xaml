<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.FlyoutPageDemo"
             Title="FlyoutPageDemo" FlyoutLayoutBehavior="Default">
    <FlyoutPage.Flyout>
        <ContentPage Title="Master Page">
            <Label Text="Master Page Details"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <ContentPage Title="Details Page">
            <Label Text="Details Page Details"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"/>
        </ContentPage>

    </FlyoutPage.Detail>

    </FlyoutPage>